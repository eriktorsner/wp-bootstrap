#!/usr/bin/env php
<?php

foreach (array(__DIR__ . '/../../../autoload.php', __DIR__ . '/../../autoload.php', __DIR__ . '/../vendor/autoload.php', __DIR__ . '/vendor/autoload.php') as $file) {
    if (file_exists($file)) {
        define('WPBOOTSTRAP_COMPOSER_INSTALL', $file);
        break;
    }
}
if (!defined('WPBOOTSTRAP_COMPOSER_INSTALL')) {
    fwrite(STDERR,
        'You need to set up the project dependencies using the following commands:' . PHP_EOL .
        'wget http://getcomposer.org/composer.phar' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
    die(1);
}

require_once WPBOOTSTRAP_COMPOSER_INSTALL;
define('BASEPATH', realpath(dirname(WPBOOTSTRAP_COMPOSER_INSTALL) . '/../'));

if(count($argv) < 2) {
    die("At least one argument expected\n");
}

switch($argv[1]) {
    case 'wp-bootsrap':
        Wpbootsrap\Bootsrap::bootstrap();
        break;
    case 'wp-install':
        Wpbootsrap\Bootsrap::install();
        break;        
    case 'wp-setup':
        Wpbootsrap\Bootsrap::setup();
        break;                
    case 'wp-update':
        Wpbootstrap\Bootstrap::update();
        break;
    case 'wp-export':
        Wpbootstrap\Export::export();
        break;
    case 'wp-import':
        Wpbootstrap\Import::import();
        break;
    default:
        die("Command {$argv[1]} not recognized\n");       
}
