#!/usr/bin/env php
<?php

define('BASEPATH', getcwd());
require_once BASEPATH . '/vendor/autoload.php';

if(count($argv) < 2) {
    die("At least one argument expected\n");
}

$container = Wpbootstrap\Container::getInstance();

switch($argv[1]) {
    case 'wp-bootstrap':
        $bootstrap = $container->getBootstrap();
        $container->validateSettings();
        $bootstrap->bootstrap();
        break;
    case 'wp-install':
        $container->validateSettings();    
        $bootstrap = $container->getBootstrap();
        $bootstrap->install();
        break;        
    case 'wp-setup':
        $container->validateSettings();    
        $bootstrap = $container->getBootstrap();
        $bootstrap->setup();
        break;                
    case 'wp-update':
        $container->validateSettings();
        $bootstrap = $container->getBootstrap();
        $bootstrap->update();
        break;
    case 'wp-export':
        $container->validateSettings();
        $export = $container->getExport();
        $export->export();
        break;
    case 'wp-import':
        $container->validateSettings();    
        $import = $container->getImport();
        $import->import();
        break;
    case 'wp-reset':
        $container->validateSettings();
        $bootstrap = $container->getBootstrap();
        $bootstrap->reset();
        break;        
    case 'wp-init':
        $initBootstrap = $container->getInitbootstrap();
        $initBootstrap->init();
        break;                
    case 'wp-init-composer':
        $initBootstrap = $container->getInitbootstrap();
        $initBootstrap->initComposer();
        break;
    case 'wp-snapshots':
        $container->validateSettings();
        $manageState = $container->getSnapshots();
        $manageState->manage();
        break;        
    default:
        die("Command {$argv[1]} not recognized\n");       
}
