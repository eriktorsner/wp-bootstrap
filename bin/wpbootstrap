#!/usr/bin/env php
<?php

define('BASEPATH', getcwd());
require_once BASEPATH . '/vendor/autoload.php';

if(count($argv) < 2) {
    die("At least one argument expected\n");
}

switch($argv[1]) {
    case 'wp-bootsrap':
        $bootstrap = Wpbootstrap\Bootstrap::getInstance();
        $bootstrap->bootstrap();
        break;
    case 'wp-install':
        $bootstrap = Wpbootstrap\Bootstrap::getInstance();
        $bootstrap->install();
        break;        
    case 'wp-setup':
        $bootstrap = Wpbootstrap\Bootstrap::getInstance();
        $bootstrap->setup();
        break;                
    case 'wp-update':
        $bootstrap = Wpbootstrap\Bootstrap::getInstance();
        $bootstrap->update();
        break;
    case 'wp-export':
        $export = Wpbootstrap\Export::getInstance();
        $export->export();
        break;
    case 'wp-import':
        $import = Wpbootstrap\Import::getInstance();
        $import->import();
        break;
    case 'wp-init':
        $initBootstrap = Wpbootstrap\Initbootstrap::getInstance();
        $initBootstrap->init();
        break;                
    case 'wp-init-composer':
        $initBootstrap = Wpbootstrap\Initbootstrap::getInstance();
        $initBootstrap->initComposer();
        break;        
    case 'wp-reset':
        $bootstrap = Wpbootstrap\Bootstrap::getInstance();
        $bootstrap->reset();
        break;                        
    default:
        die("Command {$argv[1]} not recognized\n");       
}
